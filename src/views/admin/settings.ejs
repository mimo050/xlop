<% layout('layout') %>
<section class="content">
  <div class="card">
    <h2>Settings</h2>
    <form method="POST" action="/admin/settings" class="form-grid">
      <% settings.forEach(item => { %>
        <label><%= item.key %>
          <input type="text" name="<%= item.key %>" value="<%= item.value %>" />
        </label>
      <% }) %>
      <label>supportEmail<input type="email" name="supportEmail" placeholder="support@example.com" /></label>
      <label>siteName<input type="text" name="siteName" placeholder="AppleP12 Sign" /></label>
      <button class="primary" type="submit">Save</button>
    </form>
  </div>
</section>
